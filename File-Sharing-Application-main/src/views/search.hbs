<main class="container my-5">
    <div class="row my-4">
        <h1>Tìm kiếm: '<span class="text-primary">{{keySearch}}</span>'</h1>
        <p class="fs-4"><b>Số lượng:</b> {{file.length}}</p>
    </div>
    <div class="row">
        {{#if file}}
        {{#each file}}
        <div class="item">
            <div class="row">
                <div class="col">
                    <h3>
                        <a href="{{this.url}}/{{this.id}}">{{this.name}}</a>
                    </h3>
                </div>
                <div class="col">
                    <p><b>Thể loại: </b>{{this.type}}</p>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <p>{{this.description}}</p>
                </div>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="col d-flex justify-content-center">
            <span class="p-4 bg-primary bg-opacity-10 rounded-3 fw-bold fs-2 my-5">Không tìm thấy File.</span>
        </div>
        {{/if}}
    </div>
</main>