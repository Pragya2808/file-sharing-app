                                <a class="dropdown-item" href="/files/code">Code</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/about">
                                <span class="material-symbols-outlined">
                                    person_search
                                </span>
                            </a>
                        </li>
                    </ul>

                    <form id="search-top-form" class="d-flex my-2 my-lg-0" action="/search" method="GET">
                        <input class="form-control py-2 rounded-0" onkeyup="CheckValidFormSearch()" name="q" type="text"
                            placeholder="Search">
                        <button class="btn btn-outline-success my-2 my-sm-0 rounded-0 d-flex" type="submit" disabled>
                            <span class="material-symbols-outlined my-auto">
                                search
                            </span>
                        </button>
                    </form>

                    <script>
                        var form = document.getElementById("search-top-form");
                        var btnSubFormSearch = document.querySelector("nav #search-top-form button");
                        var input = document.querySelector("nav #search-top-form input");
                        btnSubFormSearch.disabled = true;
                        function CheckValidFormSearch() {
                            console.log(input.value);
                            if (input.value) {
                                btnSubFormSearch.disabled = false;
                            } else {
                                btnSubFormSearch.disabled = true;
                            }
                        }
                    </script>
                </div>
            </div>
        </nav>
    </header>
    {{{body}}}

