<main class="container my-5">
    <div class="row my-5">
        <h1 class="fs-1 fw-bold text-primary page-name" value="delete">Tất cả file đã xóa</h1>
        <span class="fs-5">Số lượng: <b class="text-primary">{{file.length}}</b></span>
        <hr class="mt-2">
    </div>
    <div class="row">
        <div class="col-12">
            <div class="row" style="">
                {{#if file}}
                {{#each file}}
                <div class="col-12 px-4 item-show">
                    <div class="row">
                        <div class="item">
                            <div class="d-flex justify-content-between">
                                <h3 class="">
                                    <a target="_blank" href="/{{this.url}}/{{this.id}}">{{this.name}}</a>
                                </h3>
                                <span class="my-auto">Thể loại: <a href="/files/{{this.type}}"
                                        class="text-primary fw-bold">{{this.type}}</a></span>
                            </div>
                            {{#if this.description}}
                            <div class="row mt-2">
                                <span class=""><b>Mô tả:</b> {{this.description}}</span>
                            </div>
                            {{/if}}
                            {{#if this.image}}
                            <div class="thumbnail">
                                <img src="{{this.url}}" alt="Image">
                            </div>
                            {{/if}}
                            <div class="mt-3">
                                <form role="form" action="/delete" method="POST" onsubmit="return validateForm(event);">
                                    <input type="hidden" name="id" value="{{this.id}}">
                                    <input type="button" name="btn" value="Delete" id="" data-bs-toggle="modal"
                                        data-bs-target="#modal-confirm"
                                        class="btn btn-outline-primary btn-delete mx-auto" />
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}

                {{else}}
                <h4 class="p-4 mt-4 bg-primary bg-opacity-10 text-center rounded-2">Chưa có File nào</h4>
                {{/if}}
            </div>
        </div>
    </div>
</main>

<script type="module" src="../javascript/delete.js" defer></script>